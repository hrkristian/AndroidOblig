<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/land_card_width"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/search_base_margin_padding">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cardview_background"
        android:padding="8dp">

        <ImageView
            android:id="@+id/search_carditem_cropImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_card_background"
            android:contentDescription="@string/search_desc_card_image"
            android:padding="1dp"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/search_carditem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/search_carditem_cropImage"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/search_carditem_cmcLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/search_carditem_title"
            android:text="@string/search_heading_cmc" />

        <TextView
            android:id="@+id/search_carditem_cmc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/search_carditem_cmcLabel"
            android:layout_toEndOf="@id/search_carditem_cmcLabel"
            android:paddingEnd="@dimen/search_base_margin_padding"
            android:paddingStart="@dimen/search_base_margin_padding" />

        <TextView
            android:id="@+id/search_carditem_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@id/search_carditem_cmcLabel"
            android:layout_toStartOf="@id/search_pin_btn"
            android:ellipsize="end"
            android:maxLines="3" />

        <ImageButton
            android:id="@+id/search_pin_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/shape_pin_background"
            android:contentDescription="@string/search_pin_card"
            android:padding="8dp"
            android:src="@drawable/pin_search_icon" />


    </RelativeLayout>
</android.support.v7.widget.CardView>