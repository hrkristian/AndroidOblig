<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/shape_cardview_background">

        <ImageView
            android:id="@+id/search_carditem_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/search_carditem_title"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@id/search_carditem_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card name Here"
            android:textStyle="bold"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/search_carditem_cmcLabel"
            android:layout_below="@id/search_carditem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Converted Mana Cost:"/>

        <TextView
            android:id="@+id/search_carditem_cmc"
            android:layout_alignBottom="@id/search_carditem_cmcLabel"
            android:layout_toRightOf="@id/search_carditem_cmcLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="4dp"
            android:text="9"
            />

        <TextView
            android:id="@+id/search_carditem_text"
            android:layout_below="@id/search_carditem_cmcLabel"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>

    
    <!--
    String title;
    String text;
    String[] rulings;
    Drawable image;
    int convertedManaCost;
    -->
</android.support.v7.widget.CardView>