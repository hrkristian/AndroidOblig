<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cardview_background"
        android:paddingBottom="10dp">

        <ImageView
            android:id="@+id/search_carditem_cropImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="1dp"
            android:background="@drawable/shape_card_background"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/search_carditem_title"
            android:layout_alignParentStart="true"
            android:layout_below="@id/search_carditem_cropImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:text="Card name Here"
            android:textStyle="bold"
            android:textSize="22sp"
            />

        <TextView
            android:id="@+id/search_carditem_cmcLabel"
            android:layout_below="@id/search_carditem_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:text="Converted Mana Cost:"/>

        <TextView
            android:id="@+id/search_carditem_cmc"
            android:layout_alignBottom="@id/search_carditem_cmcLabel"
            android:layout_toRightOf="@id/search_carditem_cmcLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="4dp"
            android:paddingLeft="4dp"
            android:text="9"
            />

        <TextView
            android:id="@+id/search_carditem_text"
            android:layout_below="@id/search_carditem_cmcLabel"
            android:layout_alignParentStart="true"
            android:ellipsize="end"
            android:maxLines="3"
            android:paddingStart="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



    </RelativeLayout>
</android.support.v7.widget.CardView>