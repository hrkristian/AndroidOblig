<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="3dp">

    <TextView
        android:id="@+id/search_carditem_title"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Card name Here"
        android:textStyle="bold"
        android:textSize="22sp"/>
    
    
    <TextView
        android:id="@+id/search_carditem_cmcLabel"
        android:layout_below="@id/search_carditem_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Converted Mana Cost:"/>

    <TextView
        android:id="@+id/search_carditem_cmc"
        android:layout_alignBottom="@id/search_carditem_cmcLabel"
        android:layout_toRightOf="@id/search_carditem_cmcLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:text="9"
        />

    <ImageView
        android:layout_alignParentEnd="true"
        android:id="@+id/search_carditem_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/shape_card_background"
        />
    
    <!--
    String title;
    String text;
    String[] rulings;
    Drawable image;
    int convertedManaCost;
    -->
</RelativeLayout>