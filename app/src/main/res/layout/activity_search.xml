<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="xyz.robertsen.androidoblig.SearchActivity">

    <SearchView
        android:id="@+id/cardHitSearchView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="5dp"
        android:padding="8dp"
        android:queryHint="Search text goes here"
        android:background="@drawable/shape_card_background"

        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/card_recycler_cardHits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cardHitSearchView">


    </android.support.v7.widget.RecyclerView>
</LinearLayout>
