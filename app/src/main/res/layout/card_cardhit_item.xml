<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cardview_background">

        <ImageView
            android:id="@+id/card_cardhits_image"
            android:layout_width="113dp"
            android:layout_height="160dp"
            android:src="@drawable/jace_mind_sculptor"
            android:layout_marginEnd="8dp"/>
        
        <TextView
            android:id="@+id/card_cardhits_title"
            android:layout_toEndOf="@id/card_cardhits_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card title goes here"
            android:textAppearance="@android:color/black"
            android:textStyle="bold"
            android:textSize="22dp"/>
        
        <TextView
            android:id="@+id/card_cardhits_text"
            android:layout_toEndOf="@id/card_cardhits_image"
            android:layout_below="@id/card_cardhits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card text goes here"
            android:textAppearance="@android:color/black"
            android:textSize="14dp"/>


        
    </RelativeLayout>

</android.support.v7.widget.CardView>