<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/card_cardhits_image"
            android:layout_width="120dp"
            android:layout_height="160dp"
            android:src="@drawable/jace_mind_sculptor"
            android:layout_marginEnd="8dp"/>
        
        <TextView
            android:id="@+id/card_cardhits_title"
            android:layout_toEndOf="@id/card_cardhits_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Card title goes here"
            android:textStyle="bold"
            android:textSize="22dp"/>
        
        <TextView
            android:id="@+id/card_cardhits_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_cardhits_image"
            android:layout_below="@id/card_cardhits_title"
            android:text="Card text goes here"/>
        
    </RelativeLayout>

</android.support.v7.widget.CardView>