<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/base_margin">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_cardview_background"
        android:padding="4dp">

        <ImageView
            android:id="@+id/card_cardhits_image"
            android:layout_width="@dimen/card_width"
            android:layout_height="@dimen/card_height"
            android:layout_marginEnd="@dimen/base_margin"
            android:background="@drawable/shape_card_background"
            android:padding="1dp"
            android:src="@drawable/jace_mind_sculptor" />

        <TextView
            android:id="@+id/card_cardhits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/card_cardhits_image"
            android:text="Card title goes here"
            android:textSize="@dimen/card_title_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/card_cardhits_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_cardhits_title"
            android:layout_toEndOf="@id/card_cardhits_image"
            android:text="Card text goes here"
            android:maxLines="7"
            android:textSize="@dimen/card_text_size" />
    </RelativeLayout>
</android.support.v7.widget.CardView>